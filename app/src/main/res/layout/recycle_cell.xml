<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_width="@dimen/item2_w"
    android:layout_height="@dimen/item_h">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="@dimen/item_w"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/nameTextView"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="TextView" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="1dp"
        android:layout_width="@dimen/item_w"
        android:layout_height="wrap_content"
            android:visibility="gone"
            >
        <ImageView
            android:id="@+id/imageView2"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nameTextView2"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/nameTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="TextView" />
    </RelativeLayout>
    </LinearLayout>


</RelativeLayout>